{
  "name": "BlackSky-XMD",
  "description": "WhatsApp Multi-Device Bot using Node.js and Baileys library",
  "repository": "https://github.com/madariss5/Blacksky-XMD",
  "logo": "https://node-js-sample.herokuapp.com/node.png",
  "keywords": ["node", "whatsapp", "bot", "baileys", "multi-device"],
  "env": {
    "OWNER_NAME": {
      "description": "Name of the bot owner",
      "required": true
    },
    "OWNER_NUMBER": {
      "description": "WhatsApp number of the bot owner (with country code)",
      "required": true
    },
    "USE_PAIRING": {
      "description": "Enable pairing code authentication (true/false)",
      "required": false,
      "value": "true"
    },
    "NODE_ENV": {
      "description": "Environment mode (production/development)",
      "value": "production"
    }
  },
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    }
  ],
  "formation": {
    "worker": {
      "quantity": 1,
      "size": "eco"
    }
  },
  "stack": "heroku-22"
}