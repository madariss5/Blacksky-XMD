{
  "name": "blacksky-md",
  "description": "Advanced WhatsApp Multi-Device bot with AI capabilities",
  "repository": "https://github.com/blacksky-algorithms/blacksky-md",
  "success_url": "/",
  "stack": "container",
  "env": {
    "PREFIX": {
      "description": "Bot command prefix",
      "value": ".",
      "required": true
    },
    "OWNER_NUMBER": {
      "description": "Your WhatsApp number (international format without +)",
      "required": true
    },
    "OWNER_NAME": {
      "description": "Your name",
      "required": true
    },
    "BOT_NAME": {
      "description": "Name for your bot",
      "value": "BlackSky-MD",
      "required": false
    },
    "SESSION_ID": {
      "description": "WhatsApp session ID",
      "required": true
    },
    "NODE_ENV": {
      "description": "Node environment",
      "value": "production",
      "required": true
    },
    "DATABASE_URL": {
      "description": "PostgreSQL database URL (will be automatically set by Heroku)",
      "required": true
    }
  },
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    },
    {
      "url": "https://github.com/jonathanong/heroku-buildpack-ffmpeg-latest.git"
    },
    {
      "url": "https://github.com/clhuang/heroku-buildpack-webp-binaries.git"
    }
  ],
  "formation": {
    "worker": {
      "quantity": 1,
      "size": "standard-2x"
    }
  },
  "addons": [
    {
      "plan": "heroku-postgresql:essential-0"
    }
  ]
}