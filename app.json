{
  "name": "BlackSky-MD",
  "description": "WhatsApp Multi-Device Bot using Node.js and Baileys library",
  "repository": "https://github.com/madariss5/Blacksky-XMD",
  "logo": "https://node-js-sample.herokuapp.com/node.png",
  "env": {
    "SESSION_ID": {
      "description": "Session ID for WhatsApp authentication",
      "required": true
    },
    "OWNER_NAME": {
      "description": "Name of the bot owner",
      "required": true
    },
    "OWNER_NUMBER": {
      "description": "WhatsApp number (country code + number, e.g., 1234567890)",
      "required": true
    },
    "NODE_ENV": {
      "description": "Environment mode",
      "value": "production"
    },
    "LOG_LEVEL": {
      "description": "Logging level (info/debug/error)",
      "value": "info",
      "required": false
    },
    "OPENAI_API_KEY": {
      "description": "OpenAI API key for AI features (optional)",
      "required": false
    },
    "PEXELS_API_KEY": {
      "description": "Pexels API key for image features (optional)",
      "required": false
    },
    "TENOR_API_KEY": {
      "description": "Tenor API key for GIF features (optional)",
      "required": false
    }
  },
  "formation": {
    "worker": {
      "quantity": 1,
      "size": "basic"
    }
  },
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    }
  ],
  "stack": "heroku-22",
  "addons": []
}